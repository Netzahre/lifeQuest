<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="216dp"
        android:layout_height="216dp"
        app:srcCompat="@drawable/applogo"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bienvenido/a"
        android:textColor="#000000"
        android:textSize="34sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="105dp"
        tools:layout_editor_absoluteY="241dp" />

    <TextView
        android:id="@+id/textView2"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre usuario"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="307dp" />

    <EditText
        android:id="@+id/editTextText"
        style="@style/espacioTexto"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Usuario"
        android:inputType="text"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="334dp" />

    <TextView
        android:id="@+id/textView4"
        style="@style/texto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contraseña"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="410dp" />

    <EditText
        android:id="@+id/editTextText4"
        style="@style/espacioTexto"
        android:layout_width="351dp"
        android:layout_height="50dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="text"
        tools:layout_editor_absoluteX="30dp"
        tools:layout_editor_absoluteY="437dp" />

    <Button
        android:id="@+id/button"
        style="@style/botonAzul"
        android:layout_width="188dp"
        android:layout_height="55dp"
        android:text="Acceder"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="516dp" />

    <Button
        android:id="@+id/button5"
        style="@style/botonAzul"
        android:layout_width="188dp"
        android:layout_height="55dp"
        android:text="Registrarse"
        android:textSize="20sp"
        app:backgroundTint="@null"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="590dp" />

    <TextView
        android:id="@+id/textView3"
        style="@style/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/passRecovery"
        android:textAppearance="underline"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="667dp" />

    <TextView
        android:id="@+id/textView5"
        style="@style/url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/TOS"
        android:textAppearance="underline"
        android:textSize="14sp"
        tools:layout_editor_absoluteX="153dp"
        tools:layout_editor_absoluteY="696dp" />

</androidx.constraintlayout.widget.ConstraintLayout>